<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@drawable/background_odoo"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:fontFamily="@font/open_sans_bold"
		android:scaleType="centerCrop"
		android:text="@string/title_dnie_result"
		android:textAlignment="center"
		android:textColor="@color/colorTextPrimary"
		android:background="@color/colorBackground"
		android:textSize="36sp" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_marginTop="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TableLayout
					android:id="@+id/data_table"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="80dp"
					android:background="@color/colorBackgroundAlpha"
					android:padding="20dp"
					android:stretchColumns="1">

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_span="2"
							android:drawableStart="@drawable/ic_perm_identity_black_24dp"
							android:drawablePadding="5sp"
							android:gravity="start"
							android:text="@string/info_titl_sujeto"
							android:textColor="@color/colorPrimary"
							android:textSize="24sp"
							android:textStyle="bold" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_01_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_name"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_01"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_02_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_surname"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_02"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_03_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_numdoc"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_03"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_03_title_caducity"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_caducity"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_03_caducity"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_07_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_birth"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_07"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_10_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_expedition"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_10"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_08_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_birth_place"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_08"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>

					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/CITIZEN_data_tab_gender_title"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginEnd="3dp"
							android:gravity="start"
							android:padding="1dp"
							android:text="@string/info_genre"
							android:textColor="@color/colorTextPrimary"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/CITIZEN_data_tab_gender"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="start"
							android:padding="1dp"
							android:textColor="@color/colorTextPrimary" />
					</TableRow>
				</TableLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="10dp"
					android:gravity="end"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/CITIZEN_data_tab_00_SIGNATURE"
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="30dp"
						android:adjustViewBounds="true"
						android:padding="2dp"
						android:scaleType="centerCrop"
						android:contentDescription="@string/user_sign"
						android:visibility="invisible" />

					<ImageView
						android:id="@+id/CITIZEN_data_tab_00"
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:padding="2dp"
						android:transitionName="photo-img"
						android:scaleType="centerCrop"
						android:contentDescription="@string/user_photo"
						android:src="@drawable/noface" />
				</LinearLayout>

			</FrameLayout>

			<TableLayout
				android:id="@+id/data_table2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"
				android:background="@color/colorBackgroundAlpha"
				android:padding="20dp"
				android:shrinkColumns="1"
				android:stretchColumns="1">

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_span="2"
						android:drawableStart="@drawable/ic_location_on_black_24dp"
						android:drawablePadding="5sp"
						android:text="@string/info_titl_contact"
						android:textColor="@color/colorPrimary"
						android:textSize="24sp"
						android:textStyle="bold" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_09_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginEnd="3dp"
						android:gravity="start"
						android:padding="1dp"
						android:text="@string/info_country"
						android:textColor="@color/colorTextPrimary"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_09"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="start"
						android:maxLines="3"
						android:padding="1dp"
						android:singleLine="false"
						android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_04_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginEnd="3dp"
						android:gravity="start"
						android:padding="1dp"
						android:text="@string/info_address"
						android:textColor="@color/colorTextPrimary"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_04"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="start"
						android:maxLines="3"
						android:padding="1dp"
						android:singleLine="false"
						android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_05_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginEnd="3dp"
						android:gravity="start"
						android:padding="1dp"
						android:text="@string/info_province"
						android:textColor="@color/colorTextPrimary"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_05"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="start"
						android:padding="1dp"

						android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_06_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginEnd="3dp"
						android:gravity="start"
						android:padding="1dp"
						android:text="@string/info_location"
						android:textColor="@color/colorTextPrimary"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_06"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="start"
						android:padding="1dp"
						android:textColor="@color/colorTextPrimary" />
				</TableRow>
			</TableLayout>

		</LinearLayout>

	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/buttons_height"
		android:background="@color/colorBackground">

		<Button
			android:id="@+id/btnBack"
			android:layout_width="@dimen/button_width"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:background="@color/colorPrimary"
			android:text="@string/back" />

		<Space
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<Button
			android:id="@+id/btnValidate"
			android:layout_width="@dimen/button_width"
			android:layout_height="wrap_content"
			android:background="@color/colorPrimary"
			android:text="@string/validate" />
	</LinearLayout>

</LinearLayout>