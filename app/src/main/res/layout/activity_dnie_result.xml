<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@drawable/background_odoo"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:fontFamily="@font/open_sans_bold"
		android:scaleType="centerCrop"
		android:text="@string/title_dnie_result"
        android:layout_marginTop="15dp"
		android:textAlignment="center"
		android:textColor="@color/colorTextPrimary"
		android:textSize="36sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TableLayout
				android:id="@+id/data_table"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_marginTop="80dp"
				android:padding="20dp"
                android:background="@color/colorBackground"
				android:stretchColumns="1">

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_span="2"
						android:gravity="left"
						android:text="@string/info_titl_sujeto"
						android:textColor="@color/colorPrimary"
						android:drawablePadding="5sp"
						android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
						android:textSize="24sp"
						android:textStyle="bold" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_01_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_name"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_01"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_02_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_surname"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_02"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_03_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_numdoc"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_03"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_03_title_caducity"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_caducity"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_03_caducity"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_07_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_birth"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_07"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_10_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_expedition"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_10"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_08_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_birth_place"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_08"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/CITIZEN_data_tab_gender_title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="3dp"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary"
						android:text="@string/info_genre"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/CITIZEN_data_tab_gender"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left"
						android:padding="1dp"
                        android:textColor="@color/colorTextPrimary" />
				</TableRow>
			</TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
				android:gravity="right"
                android:orientation="horizontal">

				<ImageView
					android:id="@+id/CITIZEN_data_tab_00_SIGNATURE"
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:layout_below="@+id/CITIZEN_data_tab_00"
					android:layout_alignStart="@+id/CITIZEN_data_tab_00"
					android:layout_gravity="bottom"
					android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
					android:adjustViewBounds="true"
					android:padding="2dp"
					android:scaleType="centerCrop"
					android:visibility="invisible" />

                <ImageView
                    android:id="@+id/CITIZEN_data_tab_00"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/noface" />
            </LinearLayout>

		</FrameLayout>

		<TableLayout
			android:id="@+id/data_table2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/data_table"
			android:layout_marginTop="10dp"
			android:layout_toEndOf="@+id/btnBack"
			android:padding="20dp"
            android:background="@color/colorBackground"
			android:shrinkColumns="1"
			android:stretchColumns="1">

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_span="2"
                    android:drawablePadding="5sp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
					android:text="@string/info_titl_contact"
					android:textSize="24sp"
					android:textColor="@color/colorPrimary"
					android:textStyle="bold" />
			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/CITIZEN_data_tab_09_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="3dp"
					android:gravity="left"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary"
					android:text="@string/info_country"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/CITIZEN_data_tab_09"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="left"
					android:maxLines="3"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary"
					android:singleLine="false" />
			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/CITIZEN_data_tab_04_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="3dp"
					android:gravity="left"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary"
					android:text="@string/info_address"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/CITIZEN_data_tab_04"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="left"
					android:maxLines="3"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary"
					android:singleLine="false" />
			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/CITIZEN_data_tab_05_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="3dp"
					android:gravity="left"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary"
					android:text="@string/info_province"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/CITIZEN_data_tab_05"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="left"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary" />
			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/CITIZEN_data_tab_06_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="3dp"
					android:gravity="left"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary"
					android:text="@string/info_location"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/CITIZEN_data_tab_06"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="left"
					android:padding="1dp"
                    android:textColor="@color/colorTextPrimary" />
			</TableRow>
		</TableLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<Button
				android:id="@+id/btnBack"
				android:layout_width="110dp"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentBottom="true"
				android:layout_gravity="bottom"
				android:layout_marginStart="10dp"
				android:layout_marginBottom="35dp"
				android:background="@color/colorPrimary"
				android:text="@string/back" />

			<Button
				android:id="@+id/btnValidate"
				android:layout_width="110dp"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentBottom="true"
				android:layout_gravity="bottom|right"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="35dp"
				android:background="@color/colorPrimary"
				android:text="@string/validate" />
		</FrameLayout>

	</LinearLayout>

</LinearLayout>